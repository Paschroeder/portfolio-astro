---
import '../styles/global.css';
const pageTitle = "Path of working";

const skills = [
    { name: "JavaScript", level: "Advanced" },
    { name: "Astro", level: "Intermediate" },
    { name: "HTML & CSS", level: "Advanced" },
    { name: "Node.js", level: "Intermediate" },
];

const skillColor = "green";
const fontWeight = "bold";
const textCase = "uppercase";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="./favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>
        <a href="/portfolio-astro/">Home</a>
        <a href="/portfolio-astro/about/">About</a>
		<a href="/portfolio-astro/work/">Work</a>

		<h1>{pageTitle}</h1>
        <style define:vars={{skillColor, fontWeight, textCase}}>
			.skill {
				color: var(--skillColor);
				font-weight: var(--fontWeight);
    			text-transform: var(--textCase);
			}
		</style>
		
		<p>patrick.nixon --version</p>

		<ul>
			{skills.map((skill) => <li class="skill">{skill.name} - {skill.level}</li>)}
		</ul>

        <p>patrick.nixon --list-projects:</p>
		<ul>
			<li><a href="/portfolio-astro/work/projects/project-1/">My First Project</a></li>
			<li><a href="/portfolio-astro/work/projects/project-2/">My Second Project</a></li>
			<li><a href="/portfolio-astro/work/projects/project-3/">My Third Project</a></li>
		</ul>

        <p>patrick.nixon --list-preferences:</p>
	</body>
</html>
